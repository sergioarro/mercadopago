BRANCH_NAME=$(git branch | grep '*' | sed 's/* //')
VALID_BRANCH_REGEX="^(feature|hotfix|release)/(.*)+$"

# Branch naming check
if [ "$BRANCH_NAME" != "main" ] && [ "$BRANCH_NAME" != "develop" ]; then
  if ! echo "$BRANCH_NAME" | grep -Eq "$VALID_BRANCH_REGEX"; then
    echo "ðŸ’¥ Your branch name: '$BRANCH_NAME' is invalid, it has failed regex check"
    echo "Ensure it"
    echo "  - starts with one of: feature/, hotfix/, release/"
    false
  fi
fi

echo 'âœ… ðŸ¥³ Husky pre-push checks successful!'
